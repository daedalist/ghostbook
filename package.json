{
  "name": "ghostbook",
  "version": "0.2.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "follow-redirects": "^1.15.11",
    "next": "^16.0.3",
    "node-forge": "^1.3.0",
    "nth-check": "^2.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest ./build",
    "export": "next build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test:github-pages": "npm run build && rm -rf test-deploy && mkdir -p test-deploy/ghostbook && cp -r build/* test-deploy/ghostbook/ && echo 'Testing at http://localhost:3000/ghostbook/' && npx http-server test-deploy -p 3000",
    "clean": "rm -rf test-deploy build .next"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
