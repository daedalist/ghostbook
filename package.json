{
  "name": "ghostbook",
  "version": "0.2.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "follow-redirects": "^1.15.6",
    "next": "^15.0.0",
    "node-forge": "^1.3.0",
    "nth-check": "^2.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build", 
    "start": "npx serve@latest ./build",
    "export": "next build",
    "lint": "npx @next/codemod@canary next-lint-to-eslint-cli .",
    "test:github-pages": "npm run build && rm -rf test-deploy && mkdir -p test-deploy/ghostbook && cp -r build/* test-deploy/ghostbook/ && echo 'Testing at http://localhost:3000/ghostbook/' && npx http-server test-deploy -p 3000",
    "clean": "rm -rf test-deploy build .next"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "19.1.12",
    "eslint": "^9.34.0",
    "typescript": "5.9.2"
  }
}
